<center>
<font size = "5" color=#000000>

<div align="left">
|<%= link_to 'Edit', edit_product_path(@product), class: 'link-to' %> |
<%= link_to 'Back', products_path, class: 'link-to' %>|
</div>
<table width="85%">
	<tr>
		<td width="40%">
			<div  id="s1">
			<li>
			  <%= image_tag( @product.image, :size=>"200x200") %>
			</li>
			<br>
			<li>  
			  <font color=#000000>Name:</font>
			  <%= @product.name %>
			</li>
			<br>
			<li>
			  <font color=#000000>Brand:</font>
			  <%= @product.brand.name %>
			</li>
			<br>
			<li>
			  <font color=#000000>Product type:</font>
			  <%= @product.product_type %>
			</li>
			<br>
			<li>
			  <font color=#000000>Price:</font>
			  <%= @product.price %>
			</li>
			</div>
		</td>
		<td width="60%" align="left" id="s2">
			<h2>Rate & Review</h2>
			<%= form_for([@product, Review.new]) do |f| %>

			<h3><%= f.label :stars %>
			 <% stars = [1, 2, 3, 4, 5] %>
			 <% stars.each do |star| %>
			<%= f.radio_button :stars, star %> <%= star %>
			 <% end %>
			</h3></br>
			 <%= f.text_area :comment, :rows => 4, :cols => 40 %>
			<div class="actions">
			<%= f.submit "Post Review"%>
			</div>
			<% end %>

			<% if @product.reviews.empty? %>
			<h3>You are the first to comment </h3>
			<% else %>
			<div>
			User Reviews of <%= @product.name%>
			<br><br>
			 Star Rating :<%= number_with_precision( @product.average_stars, precision: 0) %>
			<br>
			<% @product.reviews.reverse.each do |review| %>
			<br>	
			User <%=review.user.firstname %>: <%= review.comment %>	...
			Posted: <%= time_ago_in_words(review.created_at) %> ago 
			<br>
			<% end %>
			<br>
			
			</div>
			<% end %>
		</td>
	</tr>
</table>
</font>
</center>