<center>
<strong><font size = "4" color=#990033>

<h1>Users</h1>
<div align="left">
<%= link_to 'New User', new_user_path, class: 'link-to'  %>
</div>

<table>
  <thead>
    <tr>
      <th>Firstname </th>
      <th>Lastname </th>
      <th>Email </th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= link_to 'Show', user, class: 'link-to'  %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'link-to'  %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-to'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</font>
</center>
