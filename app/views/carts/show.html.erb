
<strong><font size = "4" color=#000000>
<center>
<h1>My Cart</h1>
<hr>
<div class="container" >  
	<div class="btn-group btn-group-lg" >
	<%= button_to ' Checkout  ', new_order_path, :method => :get, class:"btn btn-lg btn-primary"%>
	</div>
  <div class="btn-group btn-group-lg">
	<%= button_to 'Continue Shopping', products_path, :method =>:get, class:"btn btn-lg btn-primary" %>
  </div>
  <div class="btn-group btn-group-lg" >
  <%= button_to ' Empty Cart ', @cart, method: :delete, confirm: 'Are you sure?', class:"btn btn-lg btn-primary"%>
	</div>
	
</div>
<table>
<% @cart.lineitems.each do |item| %>
<tr>
<td>
	<%= image_tag item.product.image, size:"120x120"%>
</td>
<td width="150px";>	
	<%= item.quantity%> &times
	<%= item.product.name%>
</td>
<td>	
	 <%= euro( item.product.price)%>
</td>	
</tr><br>
<%end%>
</table>

</center></font>

